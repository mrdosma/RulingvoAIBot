# .env.example - Environment Variables Template
# Copy this file to .env and fill in your values

# ==================== TELEGRAM ====================
# Get from @BotFather
TELEGRAM_BOT_TOKEN=key_here

# Admin user IDs (comma-separated)
ADMIN_IDS=2098206942,7239082490


# Get from https://console.groq.com
GROQ_API_KEY=your_api_key_here

# ==================== OPENAI ====================
# Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_api_key_here

# Model to use
OPENAI_MODEL=gpt-4

# Whisper model for voice recognition
WHISPER_MODEL=whisper-1

# ==================== DATABASE ====================
# PostgreSQL connection string
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://bot_user:password@localhost:5432/russian_learner

# Or use SQLite for development (not recommended for production)
# DATABASE_URL=sqlite:///russian_learner.db

# ==================== REDIS ====================
# Redis connection string
REDIS_URL=redis://localhost:6379/0

# Enable Redis caching
USE_REDIS=True

# ==================== BOT SETTINGS ====================
# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log file path
LOG_FILE=logs/bot.log

# Maximum messages per minute per user
MAX_MESSAGES_PER_MINUTE=20

# Session timeout in seconds
SESSION_TTL=3600

# ==================== LEARNING SETTINGS ====================
# Daily XP goal for users
DAILY_GOAL_XP=50

# Words to generate per lesson
WORDS_PER_LESSON=5

# Flashcards per review session
FLASHCARD_REVIEW_LIMIT=10

# ==================== NOTIFICATIONS ====================
# Daily reminder time (24-hour format)
NOTIFICATION_TIME_HOUR=9
NOTIFICATION_TIME_MINUTE=0

# ==================== AI SETTINGS ====================
# Maximum tokens per AI request
AI_MAX_TOKENS=500

# AI temperature (0.0-1.0)
AI_TEMPERATURE=0.7

# AI request timeout in seconds
AI_REQUEST_TIMEOUT=30

# ==================== RATE LIMITING ====================
# Enable rate limiting
RATE_LIMIT_ENABLED=True

# Max requests per user per hour
MAX_REQUESTS_PER_USER_PER_HOUR=100

# ==================== FILE STORAGE ====================
# Temporary files directory
TEMP_DIR=./temp

# Audio files directory
AUDIO_DIR=./audio

# ==================== MONITORING ====================
# Sentry DSN for error tracking (optional)
# Get from https://sentry.io
SENTRY_DSN=

# ==================== DOCKER/DEPLOYMENT ====================
# Database password for Docker
DB_PASSWORD=changeme123

# ==================== FEATURES ====================
# Enable experimental features
ENABLE_VOICE_RECOGNITION=True
ENABLE_AUDIO_GENERATION=True
ENABLE_LEADERBOARD=True
ENABLE_ACHIEVEMENTS=True

# ==================== ADVANCED ====================
# Database connection pool size
DB_POOL_SIZE=10

# Database pool timeout
DB_POOL_TIMEOUT=30

# Redis connection pool size
REDIS_POOL_SIZE=10